# ============================================
# Portal Nagari Guguak Malalo - Frontend Environment Variables Template
# ============================================
# Copy this file to .env.local and fill in your actual values

# ============================================
# API Configuration (REQUIRED)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ============================================
# Application Configuration
# ============================================
NEXT_PUBLIC_APP_NAME="Portal Nagari Guguak Malalo"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ============================================
# Authentication (Client-side JWT handling)
# ============================================
NEXTAUTH_SECRET=your-frontend-secret-change-in-production
NEXTAUTH_URL=http://localhost:3000

# ============================================
# File Upload Limits (Frontend validation)
# ============================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ============================================
# Feature Flags
# ============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_DEBUG_MODE=true

# ============================================
# External Services (Client-side only)
# ============================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ============================================
# Social Media Links
# ============================================
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/guguakmalalo
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/guguakmalalo

# ============================================
# Development Tools
# ============================================
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=true
ANALYZE=false

# ============================================
# Regional Settings
# ============================================
NEXT_PUBLIC_TIMEZONE=Asia/Jakarta
NEXT_PUBLIC_LOCALE=id-ID
NEXT_PUBLIC_CURRENCY=IDR

# ============================================
# Contact Information (Display only)
# ============================================
NEXT_PUBLIC_OFFICE_PHONE=+62-751-1234567
NEXT_PUBLIC_OFFICE_EMAIL=kantor@guguakmalalo.id
