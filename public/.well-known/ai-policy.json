{
  "version": "1.0",
  "site_info": {
    "name": "Nagari Guguak Malalo Digital Portal",
    "type": "Indonesian Government Portal",
    "purpose": "Public information and services for Nagari Guguak Malalo community",
    "language": "id-ID",
    "location": "Nagari Guguak Malalo, Tanah Datar, West Sumatra, Indonesia"
  },

  "ai_access_policy": {
    "general_crawling": "allowed",
    "web_search_indexing": "encouraged",
    "training_data_collection": "restricted",
    "commercial_ai_use": "allowed_with_attribution",

    "allowed_ai_services": [
      {
        "service": "ChatGPT Web Search",
        "user_agent": "ChatGPT-User",
        "access": "full",
        "restrictions": "none"
      },
      {
        "service": "Claude Web Search",
        "user_agent": "Claude-Web",
        "access": "full",
        "restrictions": "none"
      },
      {
        "service": "Perplexity AI",
        "user_agent": "PerplexityBot",
        "access": "full",
        "restrictions": "none"
      },
      {
        "service": "Google Bard",
        "user_agent": "Bard",
        "access": "full",
        "restrictions": "none"
      },
      {
        "service": "OpenAI GPTBot",
        "user_agent": "GPTBot",
        "access": "full",
        "restrictions": "none"
      }
    ],

    "restricted_services": [
      {
        "service": "Common Crawl (Training)",
        "user_agent": "CCBot",
        "access": "denied",
        "reason": "Training data collection not permitted"
      },
      {
        "service": "Google Extended (Training)",
        "user_agent": "Google-Extended",
        "access": "denied",
        "reason": "Training data collection not permitted"
      }
    ]
  },

  "content_guidelines": {
    "public_information": {
      "tourism": {
        "access": "unrestricted",
        "update_frequency": "weekly",
        "content_type": "destinations, packages, events, galleries"
      },
      "business_directory": {
        "access": "unrestricted",
        "update_frequency": "daily",
        "content_type": "UMKM profiles, products, services"
      },
      "government_services": {
        "access": "unrestricted",
        "update_frequency": "monthly",
        "content_type": "public services, procedures, requirements"
      },
      "news_announcements": {
        "access": "unrestricted",
        "update_frequency": "daily",
        "content_type": "official announcements, community news"
      }
    },

    "restricted_areas": [
      "/admin/",
      "/portal-warga/dashboard/",
      "/portal-warga/profile/",
      "/api/auth/",
      "/api/upload/"
    ]
  },

  "data_endpoints": {
    "ai_crawl_api": "https://guguakmalalo.id/api/ai-crawl",
    "sitemap_index": "https://guguakmalalo.id/sitemap-index.xml",
    "robots_txt": "https://guguakmalalo.id/robots.txt"
  },

  "usage_guidelines": {
    "attribution": {
      "required": true,
      "format": "Source: Nagari Guguak Malalo Digital Portal (guguakmalalo.id)",
      "link_back": "https://guguakmalalo.id"
    },

    "rate_limiting": {
      "requests_per_second": 1,
      "requests_per_hour": 3600,
      "concurrent_connections": 5
    },

    "content_freshness": {
      "cache_duration": "1 hour",
      "check_updates": "daily",
      "last_modified_header": "included"
    }
  },

  "contact": {
    "technical_issues": "tech@guguakmalalo.id",
    "content_questions": "info@guguakmalalo.id",
    "api_support": "api@guguakmalalo.id",
    "legal_inquiries": "legal@guguakmalalo.id"
  },

  "compliance": {
    "data_protection": "Indonesian Personal Data Protection Law",
    "accessibility": "WCAG 2.1 AA",
    "government_standards": "Indonesian e-Government Standards",
    "international_standards": "ISO 27001, ISO 14721"
  },

  "last_updated": "2025-01-20T00:00:00Z",
  "policy_version": "1.0"
}
